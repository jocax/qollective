{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.qollective.io/qollective-schema.json",
  "title": "Qollective Extension Schema",
  "description": "JSON Schema extensions for Qollective framework code generation and configuration",
  "type": "object",
  "properties": {
    "qollective": {
      "type": "object",
      "description": "Qollective-specific configuration and metadata",
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Qollective schema version in semantic versioning format",
          "default": "1.0.0"
        },
        "envelope": {
          "type": "object",
          "description": "Configuration for response envelope wrapping",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Whether to wrap responses in Qollective envelope",
              "default": true
            },
            "includeMetadata": {
              "type": "boolean",
              "description": "Include metadata in envelope responses",
              "default": true
            },
            "errorFormat": {
              "type": "string",
              "enum": ["standard", "detailed", "minimal"],
              "description": "Error response detail level",
              "default": "standard"
            }
          },
          "additionalProperties": false
        },
        "generation": {
          "type": "object",
          "description": "Code generation configuration",
          "properties": {
            "targets": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "rust-rest", 
                  "rust-grpc", 
                  "rust-graphql",
                  "java-rest", 
                  "java-grpc", 
                  "java-graphql",
                  "typescript-rest", 
                  "typescript-grpc",
                  "typescript-graphql"
                ]
              },
              "uniqueItems": true,
              "minItems": 1,
              "description": "Code generation targets"
            },
            "outputDir": {
              "type": "string",
              "pattern": "^\\./.*|^/.*",
              "description": "Output directory for generated code (relative or absolute path)",
              "default": "./generated"
            },
            "packageName": {
              "type": "string",
              "description": "Base package/module name for generated code"
            },
            "features": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["validation", "serialization", "async", "metrics", "tracing"]
              },
              "uniqueItems": true,
              "description": "Optional features to include in generated code"
            }
          },
          "required": ["targets"],
          "additionalProperties": false
        },
        "service": {
          "type": "object",
          "description": "Service-level configuration",
          "properties": {
            "name": {
              "type": "string",
              "pattern": "^[a-zA-Z][a-zA-Z0-9-_]*$",
              "description": "Service name identifier"
            },
            "version": {
              "type": "string",
              "pattern": "^\\d+\\.\\d+\\.\\d+$",
              "description": "Service version"
            },
            "description": {
              "type": "string",
              "description": "Service description"
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["version"],
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}