{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.qollective.io/test/nullable-types/v1.0.0",
  "title": "Nullable Types Test Schema",
  "description": "Tests nullable type handling with explicit null",

  "$defs": {
    "Price": {
      "type": "object",
      "required": ["currency"],
      "properties": {
        "amount": {
          "type": ["number", "null"],
          "minimum": 0,
          "description": "Price amount (null for free)"
        },
        "currency": {
          "type": "string",
          "minLength": 3,
          "maxLength": 3,
          "description": "Currency code (ISO 4217)"
        },
        "discount": {
          "type": ["number", "null"],
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Discount percentage (null for no discount)"
        }
      }
    },

    "OptionalCounts": {
      "type": "object",
      "properties": {
        "views": {
          "type": ["integer", "null"],
          "minimum": 0,
          "description": "View count (null if not tracked)"
        },
        "likes": {
          "type": ["integer", "null"],
          "minimum": 0,
          "description": "Like count (null if not tracked)"
        }
      }
    },

    "Item": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255
        },
        "price": {
          "$ref": "#/$defs/Price"
        },
        "counts": {
          "$ref": "#/$defs/OptionalCounts"
        }
      }
    }
  }
}
