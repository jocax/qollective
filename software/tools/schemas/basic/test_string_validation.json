{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.qollective.io/test/string-validation/v1.0.0",
  "title": "String Validation Test Schema",
  "description": "Tests string length constraints (minLength, maxLength)",

  "$defs": {
    "ValidatedText": {
      "type": "object",
      "required": ["short_code", "description"],
      "properties": {
        "short_code": {
          "type": "string",
          "minLength": 2,
          "maxLength": 10,
          "description": "Short identifier code"
        },
        "description": {
          "type": "string",
          "minLength": 10,
          "maxLength": 500,
          "description": "Detailed description"
        },
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "Optional title"
        }
      }
    }
  }
}
