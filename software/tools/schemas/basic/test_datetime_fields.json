{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.qollective.io/test/datetime-fields/v1.0.0",
  "title": "DateTime Fields Test Schema",
  "description": "Tests date-time format field generation",

  "$defs": {
    "Event": {
      "type": "object",
      "required": ["occurred_at"],
      "properties": {
        "occurred_at": {
          "type": "string",
          "format": "date-time",
          "description": "When the event occurred"
        },
        "expires_at": {
          "type": "string",
          "format": "date-time",
          "description": "Optional expiration time"
        },
        "timestamps": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "date-time"
          },
          "description": "Array of timestamps"
        }
      }
    }
  }
}
